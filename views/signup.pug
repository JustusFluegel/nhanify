extends layout

block main 
  .mainWrapWrap
    .mainWrap
      block header 
        h1(class="pageTitle") Sign Up
      - let msgTypes = Object.keys(flash || {})
      if (msgTypes.length > 0) 
        each msgType in msgTypes
          each msg in flash[msgType]
            pre(class=`${msgType}`) #{msg}
      block content
        form(class="inputForm" action="/signup" method="post")
          .formDiv
            label(for="username") Username 
            input(required id="username" type="text" name="username") 
          .formDiv
            label(for="password") Password
            input(required id="password" type="password" name="password")
          input(type="submit" class="submit"  value="Sign Up")
       
      
