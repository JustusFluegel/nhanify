doctype html
html(lang="en")
  head 
    title Music Sharing Playlist
    meta(charset="UTF-8")
    link(rel="stylesheet" href="/assets/css/reset.css")
    link(rel="stylesheet" href="/assets/css/myStyle.css")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet")
  body
    .bWrap
      .navTopWrap 
        .stack1
          .navTopLeft
            if user !== undefined 
              .home
                a(class="logo" href="/playlists") N
              p(class="username") #{user.username}
            else 
              .home
                a(class="logo" href="/playlists/public") N
          .navTopRight
            if (user !== undefined)
              form(class="buttonForm" action="/signout" method="post")
                input(type="submit" value="Sign out")
            else
              a(href="/signup") Sign up 
              a(href="/login") Sign in
        .stack2
          if (user !== undefined)
            a(href="/playlists/public") Public Playlists 
      main
          block main
      footer
        nav(class="navBottom")
          block navBottom   
