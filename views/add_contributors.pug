extends signup

block header
    h1(class="pageTitle") #{pageTitle}
block content
  form(class="inputForm" action=`/${playlistType}/playlists/playlist/${page}/${playlistId}/contributors/add` method="post")
    .formDiv
      label(for="username") username
      input(id="username" type="text" name="username" value=username) 
    input(type="submit" class="submit" value="Add")
  a(href=`/${playlistType}/playlists/playlist/${page}/${playlistId}`) Back

