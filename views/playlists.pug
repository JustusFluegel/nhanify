extends layout

block title
  h1(class="pageTitle") #{pageTitle}
block navTop 
  .navTopLeft
    p #{playlists.length} Playlist(s)  
    if (user !== undefined)
      a(href="/playlists/create") Create 
block content
  .content
    .playListWrap
      each playlist in playlists
        a(href=`/playlist/${playlist.id}`) 
          div(class="songCard")
            .songWrap
              .songNumber
                p #{playlists.indexOf(playlist) + 1}
              .songDescription
                p= playlist.title   
                .songInfo
                  p(class="info") Added by: #{playlist.username} 
                  p(class="info") Songs: #{playlist.count}
            if (user !== undefined)
              form(class="delete" action=`/playlists/delete/${playlist.id}` method="post")
                input(class="deleteBtn" type="submit" value="‚ùå")

